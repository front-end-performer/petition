<section class="wrapper">
    <img src="./bigfoot.png" alt="bigfoot img" />
    <p>Tell us about yourself!</p>

    {{#if error}}
    <div class="error">oops! Something went wrong!</div>
    {{/if}}

    <form class="login_form" method="POST">
        <input type="text" placeholder="..." name="city" />
        <label>City</label>
        <input type="text" placeholder="..." name="age" />
        <label>Age</label>
        <input type="url" placeholder="..." name="homepage" />
        <label>Home Page</label>

        <input name="_csrf" value="{{csrfToken}}" type="hidden" />
        <button id="btn" class="btn">Continue</button>
    </form>
</section>